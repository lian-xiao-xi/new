
.clearfix:after, .clearfix:before
  content: ""
  display: table
  overflow: hidden
.clearfix:after
  height: 0
  line-height: 0
  clear: both

.center-block 
  display: block
  margin-right: auto
  margin-left: auto

@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  .border-bottom-1px
    &:after
      transform: scaleY(0.7)
  .border-left-1px
    &:after
      transform: scaleX(0.7)
  .border-right-1px
    &:after
      transform: scaleX(0.7)
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  .border-bottom-1px
    &:after
      transform: scaleY(0.5)
  .border-left-1px
    &:after
      transform: scaleX(0.5)
  .border-right-1px
    &:after
      transform: scaleX(0.5)
      

